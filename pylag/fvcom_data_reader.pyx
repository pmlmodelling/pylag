                Kz_2 = self._unstructured_grid.interpolate_in_time_and_space(self._Kz_last,
                                                                             self._Kz_next,
                                                                             k_layer+1,
                                                                             time_fraction,
                                                                             particle)
                z_2 = self._unstructured_grid.interpolate_in_time_and_space(self._depth_levels_last,
                                                                            self._depth_levels_next,
                                                                            k_layer+1,
                                                                            time_fraction,
                                                                            particle)

