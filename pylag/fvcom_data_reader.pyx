                                                                             self._Kz_next,
                                                                             k_layer,
                                                                             time_fraction,
                                                                             particle)
                z_0 = self._unstructured_grid.interpolate_in_time_and_space(self._depth_levels_last,
                                                                            self._depth_levels_next,
                                                                            k_layer,
                                                                            time_fraction,
                                                                            particle)

